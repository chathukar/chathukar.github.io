{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        "messages": {
          ".read": true,
          ".write": true,
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'timestamp'])"
          }
        },
        "users": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
} 